<section class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h1>All Products</h1>
                <p style="font-size: 16px">
                    Giày Nike - Nâng niu bàn chân Việt </br>
                    Hãy tô điểm cho đôi chân của bạn những điều tốt đẹp nhất.
                </p>
            </div>
        </div>
    </div>

    <!-- single product slide -->
    <div class="row">
        <!-- single product -->
        @for (var item = 0; item < 8; item++)
        {
            <div class="col-lg-3 col-md-6">
                <div class="single-product mb-4">
                    <div style="width:250px; height:250px; margin-bottom:20px">
                    <img src="@Model[item].ImageURL" style="width:100%; height:100%">
                    </div>
                    <div class="product-details">
                        <h6>
                            @Model[item].Name
                        </h6>
                        <div class="price">
                            <h6>$@Model[item].Price</h6>
                            <h6 class="text-danger">-5%</h6>
                        </div>

                        <div class="prd-bottom">

                            
                            <a class="social-info" asp-action="Product_Detail" asp-route-productId="@Model[item].Id">
                                <span class="lnr lnr-move"></span>
                                <p class="hover-text">View more</p>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="text-center">
		<a class="btn btn-success mb-4" asp-action="Product">Xem thêm >></a>
    </div>
    
</section>