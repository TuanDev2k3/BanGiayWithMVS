@model PagedList.IPagedList<BaiCuoiKy.Models.Product>
@using PagedList.Mvc;
<!-- Start Banner Area -->
<section class="banner-area organic-breadcrumb">
    <div class="container">
        <div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
            <div class="col-first">
                <h1>Shop Category page</h1>
                <nav class="d-flex align-items-center">
                    <a href="index.html">Home<span class="lnr lnr-arrow-right"></span></a>
                    <a href="#">Shop<span class="lnr lnr-arrow-right"></span></a>
                    
                </nav>
            </div>
        </div>
    </div>
</section>
<!-- Thêm phân trang vào -->

<!-- End Banner Area -->
<div class="container">
    <div class="row">
            <!-- Start Filter Bar -->
            <div class="filter-bar d-flex flex-wrap align-items-center justify-content-between col-12">
                <div class="pagination">
                @for (int i = 1; i <= @Model.PageCount;i++)
                {

                    <a asp-route-page="@i">@i</a>
                }
                </div>
                <div style="color: black;">
				    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
            </div>
            <!-- End Filter Bar -->
            <!-- Start Best Seller -->
            @* @model IEnumerable<Product> *@
            <section class="lattest-product-area pb-40 category-list">
                <div class="" style="display: grid; grid-template-columns: repeat(4, 1fr); gap: 2rem;">
                       @foreach (var item in @Model)
                        {
                                    <div class="single-product mb-0" style="box-shadow: 0 0 2px #aaa; border-radius: 5px;">
                                        <div style="height: 250px; width: 260px; margin-bottom:20px">
                                            <img src="@item.ImageURL" style="width:100%; height:100%">
                                        </div>
                                        <div class="product-details px-2">
                                            <h6>
                                                @item.Name
                                            </h6>
                                            <div class="price">
                                                <h6>$@item.Price</h6>
                                                <h6 class="text-danger">-5%</h6>
                                            </div>

                                            <div class="prd-bottom">

                                                @* <a href="" class="social-info">
                                                    <span class="ti-bag"></span>
                                                    <p class="hover-text">Add To Bag</p>
                                                </a> *@
                                                    <a class="social-info" asp-action="Product_Detail" asp-route-productId="@item.Id">
                                                    <span class="lnr lnr-move"></span>
                                                    <p class="hover-text">View more</p>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                        }
                </div>
            </section>
           

<!-- Start related-product Area -->
<section class="related-product-area section_gap">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <div class="section-title">
                    <h1>Deals of the Week</h1>
                    <p>
                          Giày Nike - Nâng niu bàn chân Việt </br>
                          Hãy tô điểm cho đôi chân của bạn những điều tốt đẹp nhất.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-9">
                    <div class="row">
							@foreach (var item in @Model)
							{
                                <div class="col-lg-4 col-md-4 col-sm-6 mb-20">
									<div class="single-related-product d-flex">
										<a href="#"><img src="@item.ImageURL" width="60px" height="60px" alt=""></a>
										<div class="desc">
											<a href="#" class="title">@item.Name</a>
											<div class="price">
												<h6>$@item.Price</h6>
												
											</div>
										</div>
									</div>
								</div>
							}
					</div>
            </div>
            <div class="col-lg-3">
                <div class="ctg-right">
                    <a href="#" target="_blank">
                        <img class="img-fluid d-block mx-auto" src="~/img/category/c5.jpg" alt="">
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
</div>
</div>
<!-- End related-product Area -->
