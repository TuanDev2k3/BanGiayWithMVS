

<div style="margin-top:160px;">
    <!-- start product Area -->
    <!-- single product slide -->
    <div class="single-product-slider">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 text-center">
                    <div class="section-title">
                        <h1 style="font-size:35px; font-family:'Roboto', sans-serif; font-weight: 500;">Quản Lý Sản Phẩm</h1>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mb-5">
                <a asp-action="Create_Product" class="btn btn-success">Thêm sản phẩm</a>
                <a asp-controller="Home" asp-action="Index" class="btn btn-danger mx-4">Trang chủ</a>
            </div>
            <div class="row">
                <!-- single product -->
                @foreach (var item in ViewBag.Product)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="single-product">
                            <div style="width:250px; height:250px; margin-bottom: 10px;">
                                 <img class="img-fluid" src="@item.ImageURL" style="width: 100%; height: 100%; object-fit: cover; object-position: center;">
                            </div>
                            <div class="product-details">
                                <h5 class="text-danger">
                                    @item.Name
                                </h5>
                                <div class="price">
                                    <h6>$@item.Price</h6>
                                </div>
                                <div>
                                    <a asp-action="Edit_Product" asp-route-Id="@item.Id">
                                        Edit |
                                    </a>
                                    <a asp-action="Detele_Product" asp-route-Id="@item.Id">
                                        Delete
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>

        </div>
       
    </div>
    
</div>