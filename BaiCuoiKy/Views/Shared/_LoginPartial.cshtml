@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <a class="nav-link text-dark" title="Manage">@User.Identity?.Name</a>
        <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "Shoe", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
}
else
{
        <a class="nav-link text-dark search" asp-area="Identity" asp-page="/Account/Login"><span class="lnr lnr-user"></span></a>
}

